<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".authFragment">

    <ImageView
        android:id="@+id/bck_btn"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@mipmap/ic_back"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/select_user_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/selectHeadTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/anton"
            android:text="@string/select_user_type_head_text"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/admin_pointer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/selectHeadTitle"
            android:layout_marginVertical="20dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="100dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/admin_name"
                    android:src="@mipmap/admin" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/admin_name"
                android:textAllCaps="true"
                android:fontFamily="@font/anton"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/user_pointer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/admin_pointer"
            android:layout_marginVertical="20dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="170dp"
                android:layout_height="170dp"
                android:layout_gravity="center_horizontal"
                app:cardCornerRadius="100dp">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/user_name"
                    android:src="@mipmap/user"/>
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="@string/user_name"
                android:textAllCaps="true"
                android:fontFamily="@font/anton"
                android:textSize="25sp" />
        </LinearLayout>

    </LinearLayout>

<!--  SIGN UP CONTAINER USER/ADMIN   -->
    <LinearLayout
        android:id="@+id/auth_form"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:visibility="visible">

        <androidx.cardview.widget.CardView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="70dp">

            <ImageView
                android:id="@+id/regimage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/reg_main_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="25dp"
            android:fontFamily="@font/anton"
            android:textAlignment="center"
            android:textSize="25sp" />

        <!--   REGISTRATION PART 1     -->
        <LinearLayout
            android:id="@+id/regstage1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            >

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                app:cardCornerRadius="20dp">

                <EditText
                    android:id="@+id/fir_name_holder"
                    android:layout_width="match_parent"
                    android:layout_height="48sp"
                    android:background="@color/secondary"
                    android:backgroundTint="@color/secondary"
                    android:hint="@string/get_fir_name"
                    android:inputType="text"
                    android:paddingHorizontal="15dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                app:cardCornerRadius="20dp">

                <EditText
                    android:id="@+id/las_name_holder"
                    android:layout_width="match_parent"
                    android:layout_height="48sp"
                    android:background="@color/secondary"
                    android:backgroundTint="@color/secondary"
                    android:hint="@string/get_las_name"
                    android:inputType="text"
                    android:paddingHorizontal="15dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                app:cardCornerRadius="20dp">

                <EditText
                    android:id="@+id/phn_holder"
                    android:layout_width="match_parent"
                    android:layout_height="48sp"
                    android:background="@color/secondary"
                    android:backgroundTint="@color/secondary"
                    android:hint="@string/get_phn_number"
                    android:inputType="number"
                    android:paddingHorizontal="15dp" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!--   REGISTRATION PART 2     -->
        <LinearLayout
            android:id="@+id/regstage2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="10dp"
                app:cardCornerRadius="10dp">

                <EditText
                    android:id="@+id/user_name_holder"
                    android:layout_width="match_parent"
                    android:layout_height="48sp"
                    android:background="@color/secondary"
                    android:backgroundTint="@color/secondary"
                    android:hint="@string/get_user_name"
                    android:inputType="text"
                    android:paddingHorizontal="15dp" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/user_name_err_msg_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/primary"
                android:layout_gravity="bottom"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    app:cardCornerRadius="10dp">

                    <EditText
                        android:id="@+id/password_holder"
                        android:layout_width="match_parent"
                        android:layout_height="48sp"
                        android:background="@color/secondary"
                        android:backgroundTint="@color/secondary"
                        android:hint="@string/get_pass"
                        android:inputType="textPassword"
                        android:paddingHorizontal="15dp"/>
                </androidx.cardview.widget.CardView>
                <ImageView
                    android:id="@+id/pass_viewer"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_eye_open"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"/>
            </LinearLayout>

            <TextView
                android:id="@+id/pass_req1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/pass_req_1"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                />

            <TextView
                android:id="@+id/pass_req2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/pass_req_2"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                />

            <TextView
                android:id="@+id/pass_req3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/pass_req_3"
                android:layout_marginVertical="10dp"
                android:layout_marginHorizontal="20dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    app:cardCornerRadius="10dp">

                    <EditText
                        android:id="@+id/con_pass_holder"
                        android:layout_width="match_parent"
                        android:layout_height="48sp"
                        android:background="@color/secondary"
                        android:backgroundTint="@color/secondary"
                        android:hint="@string/con_pass"
                        android:inputType="text"
                        android:paddingHorizontal="15dp" />
                </androidx.cardview.widget.CardView>

                <ImageView
                    android:id="@+id/con_pass_viewer"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_eye_open"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="5dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/con_pass_err_msg_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:textColor="@color/primary"
                android:layout_gravity="bottom"
                />

        </LinearLayout>

        <Button
            android:id="@+id/submit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nxt"
            android:textAllCaps="true"
            android:layout_marginTop="30dp"
            android:textSize="17sp"/>
    </LinearLayout>
</RelativeLayout>